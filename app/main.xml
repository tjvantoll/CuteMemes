<Page loaded="loaded">
	<Page.actionBar>
		<ActionBar title="Cute Memes" />
	</Page.actionBar>
	<ListView items="{{ reddit }}" loadMoreItems="loadMoreItems" itemTap="itemTap">
		<ListView.itemTemplate>
			<StackLayout>
				<Label text="{{ title }}" textWrap="true" cssClass="reddit-item" />
				<Image src="{{ url }}" />
				<Label text="{{ time }}" cssClass="timestamp" />
			</StackLayout>
		</ListView.itemTemplate>
	</ListView>
</Page>